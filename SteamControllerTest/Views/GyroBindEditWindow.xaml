<Window x:Class="SteamControllerTest.Views.GyroBindEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SteamControllerTest.Views"
        mc:Ignorable="d"
        Height="550" Width="800" Closed="Window_Closed">
    <Window.Title>
        <MultiBinding StringFormat="{}GyroBindEditWindow ({0})">
            <Binding Path="InputControlName" FallbackValue="Trigger" />
        </MultiBinding>
    </Window.Title>
    <Window.Background>
        <SolidColorBrush Color="{StaticResource RegionColor}"/>
    </Window.Background>
    <DockPanel>
        <ContentControl x:Name="displayControl" Content="{Binding DisplayControl}" Margin="8" />
    </DockPanel>
</Window>
